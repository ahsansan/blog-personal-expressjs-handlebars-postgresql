<!DOCTYPE html>
<html>
  {{#blog}}
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{this.title}}</title>
    <link rel="stylesheet" href="/public/style/style.css">
  </head>
  <body>
    <nav>
			<div class="logo">
				<img src="/public/images/logo-kecil.png" style="height: 33px;">
        <h4>Ahsan</h4>
			</div>
			<div class="right">
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/blog">Blog</a></li>
					<li><a href="/contact-form">Contant Me</a></li>
				</ul>
        {{#if isLogin}}
        <ul>
					<li><span style="color: #888;">Selamat datang, {{user.name}}</span></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
        {{else}}
        <ul>
					<li><a href="/register">Register</a></li>
					<li><a href="/login">Login</a></li>
				</ul>
        {{/if}}
				<div class="menu-toggle">
					<input type="checkbox" name="">
					<span></span>
					<span></span>
					<span></span>
				</div>
			</div>
		</nav>
    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{this.title}}</h1>
        <div class="author">{{this.post_at}} | {{this.author}}</div>
        <img src="{{this.image}}" alt="detail" />
        <p>
          {{this.content}}
        </p>
      </div>
    </div>
    <footer>
		<i>Copyright Â© 2021 | <a href="/" style="text-decoration: none;color:#000">Muhammad Maulana Ahsan</a></i>
	</footer>
	<script src="/public/script/script.js"></script>
  </body>
  {{/blog}}
</html>